{
 "extends": ["stylelint-config-recommended-scss",
 "stylelint-config-recess-order",
 "stylelint-config-prettier-scss"],
 "plugins": [
  "stylelint-scss",
],
 "rules": {
  "selector-class-pattern": "^.[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
  "max-nesting-depth": 3,
  "selector-max-id": 0,
  "declaration-no-important": true,
  "color-named": "never"
 }
}